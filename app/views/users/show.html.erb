<h1>ユーザー情報</h1>

<div class="user_icon">
  <%= image_tag @user.icon %>
</div>
<%= form_with(model: @user, local: true) do |form| %>
  <div class="field">
    <%= form.file_field :icon, id: :user_icon %>
  </div>
  <div class="actions">
    <%= form.submit "画像を変更" %>
  </div>
<% end %>

<p>名前：<%= @user.name %></p>
<p>メールアドレス：<%= @user.email %></p>

<% if @questionnaire.blank? %>
  <%= link_to "質問に答える", new_user_questionnaire_path(@user.id) %>
<% else %>
  <%= form_with(model: current_user.active_relationships.new, local: true) do |f| %>
    <%= f.submit "マッチング" %>
  <% end %>
  <%= link_to "回答を修正する", edit_user_questionnaire_path(@user.id, @user.questionnaire.id) %>
<% end %>

